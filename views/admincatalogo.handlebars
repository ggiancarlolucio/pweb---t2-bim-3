<div class="filter-card">
  <input type="text" class="search-input" />
  <button class="search-button">Search</button>

<div class="item">
    <a href="/admin/novoproduto">
        <button style="color: green; padding: 10px; width: 100px;" type="button">Novo produto</button>
    </a>
</div>
</div>
<div class="catalogo">
  {{#each produtos}}
    <div class="item item-center">
        <img src="/img/{{imagemLink}}" width="200px" />
        <h3>{{nome}}</h3>
        <p>R${{preco}}</p>
        <form action="/admin/produto/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" style="color: red;">
                Deletar
            </button>
        </form>
    </div>
  {{else}}
    <div class="item">
      <h3>Sem produtos registrados</h3>
    </div>
  {{/each}}
